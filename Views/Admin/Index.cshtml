@model GizemAktas.Models.UserLoginModel
@{
    ViewData["Title"] = "Admin Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Admin Girişine Hoşgeldiniz</h1>
<p>Kullanıcı Adı : <strong style="font-weight:bold">@Model.UserName</strong> </p>
<p>Şifre : <strong style="font-weight:bold">@Model.Password</strong> </p>
<p>Rol : <strong style="font-weight:bold">@Model.Role</strong> </p>

<div class="row">
    <div class="col-md-6">
        <h2>System Kullanıcıları</h2>
        <table border="2" cellspacing="7" cellpadding="7">
            <tr>
                <td>Kullanıcı Adı: system</td>
                <td>Şifre: system</td>
            </tr>
            <tr>
                <td>Kullanıcı Adı: systm</td>
                <td>Şifre: systm</td>
            </tr>
            <tr>
                <td>Kullanıcı Adı: sys</td>
                <td>Şifre: sys</td>
            </tr>
        </table>
        <br>
    </div>
    <div class="col-md-6">
        <h2>User Kullanıcıları</h2>
        <table border="2" cellspacing="7" cellpadding="7">
            <tr>
                <td>Kullanıcı Adı: user</td>
                <td>Şifre: user</td>
            </tr>
            <tr>
                <td>Kullanıcı Adı: usrs</td>
                <td>Şifre: usrs</td>
            </tr>
            <tr>
                <td>Kullanıcı Adı: usr</td>
                <td>Şifre: usr</td>
            </tr>
        </table>
    </div>
</div>


<a href="~/Account/Login" class="btn btn-danger">Çıkış Yap</a>
